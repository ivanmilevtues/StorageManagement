<Window x:Class="StorageManagement.Views.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StorageManagement.Views"
        mc:Ignorable="d"
        Title="ProductWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid Name="Categories" Grid.Row="0" Grid.Column="0" IsReadOnly="True" AutoGenerateColumns="True" 
                  ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}">
        </DataGrid>
        <DataGrid Name="Products" Grid.Row="0" Grid.Column="1" IsReadOnly="True" AutoGenerateColumns="True" 
                  ItemsSource="{Binding ProductsForCategory}" SelectedItem="{Binding SelectedProduct}">
        </DataGrid>
        <DataGrid Name="Details" Grid.Row="0" Grid.Column="2" IsReadOnly="True" AutoGenerateColumns="True"
                  ItemsSource="{Binding DetailsForProduct}">
        </DataGrid>
    </Grid>
</Window>
